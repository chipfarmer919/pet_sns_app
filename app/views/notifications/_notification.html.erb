<div class="container my-5">
  <div class="row">
    <div class="col-12 col-lg-3">
      <%= render "shared/sidebar", current_page: 'notifications' %>
    </div>
    <div class="col-12 col-lg-9 communities">
      <div class="mb-5">
        <h4 class="d-flex align-items-center gap-2 fw-bold"><i class="fa fa-paw text-light-main"></i> 通知一覧</h4>
        <div class="mt-4">
          <div class="border rounded">
            <div class="border-bottom px-3 py-2">
              <small class="d-flex justify-content-between align-items-center">
                <span>未談件数:<%= current_user.notifications.unread.count %></span>
                <span>1件~<%= notifications.count %>件を表示</span>
              </small>
            </div>
            <% notifications.each do |notification| %>
                <div class="px-3 py-2 d-flex justify-content-between border-bottom align-items-center">
                  <div class="d-flex align-items-center gap-2">
                    <% if notification.read_at %>
                      <i class="far fa-envelope-open"></i>
                    <% elsif %>
                      <i class="far fa-envelope"></i>
                    <% end %> <span class="text-decoration-underline">
                      <%= link_to notification.to_notification.message, notification_path(notification), class: "text-black" %>
                    </span>
                  </div>
                  <span><%= notification.created_at.strftime('%m月%d日 %H:%M') %></span>
                </div>
            <% end %>
            <div class="px-3 py-2 d-flex justify-content-center align-items-center">
              <ul class="d-flex justify-content-center align-items-center gap-2">
                <li>&lt;</li>
                <li>1</li>
                <li>2</li>
                <li>3</li>
                <li>...</li>
                <li>7</li>
                <li>&gt;</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <%
=begin%>
 <div class="mb-5">
        <h4 class="d-flex align-items-center gap-2 fw-bold"><i class="fa fa-paw text-main"></i> メッセージ一覧</h4>
        <div class="mt-4">
          <div class="border rounded">
            <div class="border-bottom px-3 py-2">
              <small class="d-flex justify-content-between align-items-center">
                <span>未談件数:2</span>
                <span>1件~4件を表示</span>
              </small>
            </div>
            <% messages.each do |message| %>
              <div class="px-3 py-2 d-flex justify-content-between border-bottom align-items-center">
                <div class="d-flex align-items-center gap-2">
                  <i class="fa fa-comment"></i> <span class="text-decoration-underline">
                    <p><%= link_to display_pet_or_username(message.sender), message_path(message) %>: <%= message.text %></p>
                  </span>
                </div>
                <span><%= message.created_at.strftime('%m月%d日 %H:%M') %></span>
              </div>
            <% end %>
            <div class="px-3 py-2 d-flex justify-content-center align-items-center">
              <ul class="d-flex justify-content-center align-items-center gap-2">
                <li>&lt;</li>
                <li>1</li>
                <li>2</li>
                <li>3</li>
                <li>...</li>
                <li>7</li>
                <li>&gt;</li>
              </ul>
            </div>
          </div>
        </div>
      </div> 
<%
=end%>
    </div>
  </div>
</div>
