<div class="container my-5">
  <div class="mx-auto" style="max-width: 767px">
    <h4 class="d-flex align-items-center gap-2 fw-bold justify-content-center"><i class="fa fa-paw text-light-main"></i> イベント情報入力</h4>
    <div class="mt-4">
      <%= form_with(model: [@community, @event]) do |form| %>
        <% if @event.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, "エラー") %>があります。 </h2>
            <ul>
              <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="mb-3">
          <div class="px-4 py-2 bg-light-yellow d-flex justify-content-start align-items-center gap-2">
            <span class="btn btn-sm bg-main text-white">必須</span>
            <span>タイトル <small>(全角15文字以内)</small></span>
          </div>
          <div class="mt-3 px-4">
            <%= form.text_field :title, class:"form-control", placeholder: "タイトルを入力してください" %>
          </div>
        </div>
        <div class="mb-3">
          <div class="px-4 py-2 bg-light-yellow d-flex justify-content-start align-items-center gap-2">
            <span class="btn btn-sm bg-main text-white">必須</span>
            <span>詳細</span>
          </div>
          <div class="mt-3 px-4">
            <%= form.text_area :details, rows: 6, class:"form-control", placeholder: "詳細を入力してください" %>
          </div>
        </div>
        <div class="mb-3">
          <div class="px-4 py-2 bg-light-yellow d-flex justify-content-start align-items-center gap-2">
            <span class="btn btn-sm bg-main text-white">必須</span>
            <span>場所</span>
          </div>
          <div class="mt-3 px-4">
            <%= form.text_field :event_place, required: true, class:"form-control" %>
          </div>
        </div>
        <div class="mb-3">
          <div class="px-4 py-2 bg-light-yellow d-flex justify-content-start align-items-center gap-2">
            <span class="btn btn-sm bg-main text-white">必須</span>
            <span>日時</span>
          </div>
          <div class="mt-3 px-4">
            <%= form.datetime_local_field :event_date, required: true, class:"form-control" %>
          </div>
        </div>
        <div class="mb-3">
          <div class="px-4 py-2 bg-light-yellow d-flex justify-content-start align-items-center gap-2">
            <span class="btn btn-sm bg-main text-white">必須</span>
            <span>定員</span>
          </div>
          <div class="mt-3 px-4">
            <%= form.number_field :people_limit, required: true, min: 1, class:"form-control" %>
          </div>
        </div>
        <div class="mb-3">
          <div class="px-4 py-2 bg-light-yellow d-flex justify-content-start align-items-center gap-2">
            <span class="btn btn-sm bg-main text-white">必須</span>
            <span>画像</span>
          </div>
          <div class="mt-3 px-4">
            <%= form.file_field :image, class:"form-control" %>
          </div>
        </div>
        <div class="actions mt-4 text-center">
          <%= form.submit "保存する", class: 'btn bg-main text-white fw-bold px-5' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
