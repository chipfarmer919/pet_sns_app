<div class="container my-5" style="max-width: 450px">
  <h3 class="d-flex align-items-center gap-2 fw-bold justify-content-center mb-3"><i class="fa fa-paw text-light-main"></i> パスワードを忘れた</h3>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="field mt-3">
      <%= f.label :メールアドレス, class: "mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    <div class="actions text-center mt-4">
      <%= f.submit "パスワード設定メールを送る", class: "btn bg-main text-white fw-bold" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
