<div class="container mt-4">
  <div class="row">
    <div class="col-3">
      <%= render partial: "sidebar" %>
    </div>
    <div class= "col-9">
      <div class="d-flex justify-content-between aling-items-end">
        <h3 class="d-flex align-items-center gap-2 fw-bold"><i class="fa fa-paw text-main"></i> キーワード制限</h3>
        <%= form_with model: ProhibitedWord.new, url: prohibited_words_path, remote: true do |form| %>
          <div class="input-group mb-0">
            <%= form.text_field :word, class: "form-control" %>
            <div class="input-group-btn">
              <%= form.submit '追加する', class: "btn bg-main text-white fw-bold" %>
            </div>
          </div>
        <% end %>
      </div>
      <table class="table table-striped mt-4">
        <thead>
          <tr>
            <th>制限ワード</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @prohibited_words.each do |prohibited_word| %>
            <tr>
              <td><%= prohibited_word.word %></td>
              <td>
                <a href="<%= edit_prohibited_word_path(prohibited_word) %>" class="btn bg-main text-white ">編集</a>
                <a href="<%= prohibited_word_path(prohibited_word) %>" data-confirm="Are you sure?" data-method="delete" class="btn btn-secondary">削除</a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
