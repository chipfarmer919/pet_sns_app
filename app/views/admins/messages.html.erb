<div class="container mt-4">
  <div class="row">
    <div class="col-3">
      <%= render partial: "sidebar" %>
    </div>
    <div class= "col-9">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="d-flex align-items-center gap-2 fw-bold"><i class="fa fa-paw text-main"></i> メッセージ</h3>
        <%= form_with model: AdminMessage.new, url: admin_messages_path, remote: true do |form| %>
          <div class="input-group mb-0">
            <%= form.text_field :content, class: "form-control" %>
            <div class="input-group-btn">
              <%= form.submit '保存する', class: "btn bg-main text-white fw-bold" %>
            </div>
          </div>
        <% end %>
      </div>
      <table class="table table-striped mt-4">
        <thead>
          <tr>
            <th>メッセージ</th>
            <th>送信日</th>
          </tr>
        </thead>
        <tbody>
          <% @admin_messages.each do |admin_message| %>
            <tr>
              <td><%= admin_message.content %></td>
              <td><%= admin_message.created_at %></td>
              <td><%= link_to "削除", admin_message_path(admin_message), method: :delete, class: "btn btn-secondary"  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
