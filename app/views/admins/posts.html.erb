<div class="container mt-4">
  <div class="row">
    <div class="col-3">
      <%= render partial: "sidebar" %>
    </div>
    <div class= "col-9">
      <h3 class="d-flex align-items-center gap-2 fw-bold"><i class="fa fa-paw text-main"></i> トピック</h3>
      <table class="table table-striped mt-4">
        <thead>
          <tr>
            <th>トピック名</th>
            <th>作成者</th>
            <th>コミュニティ名</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.user.name %></td>
              <td><%= post.community.title %></td>
              <td>
                <a href="<%= community_post_path(post.community, post) %>" class="btn bg-light-cyan text-white">詳細</a>
                <a href="<%= edit_community_post_path(post.community, post) %>" class="btn bg-main text-white ">編集</a>
                <a href="<%= community_post_path(post.community, post) %>" data-confirm="Are you sure?" data-method="delete" class="btn btn-secondary">削除</a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
