<div class="container mt-4">
  <div class="row">
    <div class="col-3">
      <%= render partial: "sidebar" %>
    </div>
    <div class= "col-9">
      <h3 class="d-flex align-items-center gap-2 fw-bold"><i class="fa fa-paw text-main"></i> コミュニティ</h3>
      <table class="table table-striped mt-4">
        <thead>
          <tr>
            <th>コミュニティ名</th>
            <th>オーナー</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @communities.each do |community| %>
            <tr>
              <td><%= community.title %></td>
              <td><%= community.admin.name %></td>
              <td>
                <a href="<%= community_path(community) %>" class="btn bg-light-cyan text-white">詳細</a>
                <a href="<%= edit_community_path(community) %>" class="btn bg-main text-white ">編集</a>
                <a href="<%= community_path(community) %>" data-confirm="Are you sure?" data-method="delete" class="btn btn-secondary">削除</a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
