<div class="container my-5" style="max-width: 767px">
  <div>
    <h3 class="d-flex align-items-center gap-2 fw-bold justify-content-center"><i class="fa fa-paw text-main"></i> 管理者情報編集</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="mb-3">
        <div class="px-4 py-2 bg-light-yellow d-flex justify-content-start align-items-center gap-2">
          <button class="btn btn-sm bg-main text-white fw-bold">必須</button>
          <span>メールアドレス</span>
        </div>
        <div class="mt-3 px-4">
          <div style="max-width: 350px">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
        </div>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>現在確認待ちです: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="mb-3">
        <div class="px-4 py-2 bg-light-yellow d-flex justify-content-start align-items-center gap-2">
          <button class="btn btn-sm bg-main text-white fw-bold">必須</button>
          <span>パスワード <i>(変更しない場合は空欄にしてください。)</i></span>
        </div>
        <div class="mt-3 px-4">
          <div style="max-width: 350px">
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> 以上になるように入力してください。</em>
          <% end %>
        </div>
      </div>
      <div class="mb-3">
        <div class="px-4 py-2 bg-light-yellow d-flex justify-content-start align-items-center gap-2">
          <button class="btn btn-sm bg-main text-white fw-bold">必須</button>
          <span>パスワード確認</span>
        </div>
        <div class="mt-3 px-4">
          <div style="max-width: 350px">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="mb-3">
        <div class="px-4 py-2 bg-light-yellow d-flex justify-content-start align-items-center gap-2">
          <button class="btn btn-sm bg-main text-white fw-bold">必須</button>
          <span>現在のパスワード</span>
        </div>
        <div class="mt-3 px-4">
          <div style="max-width: 350px">
            <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="actions text-center my-5">
        <%= f.submit "保存", class:"btn bg-main text-white fw-bold px-5" %>
      </div>
    <% end %>
    <div class="mt-5">
      <h3 class="d-flex align-items-center gap-2 fw-bold justify-content-center"><i class="fa fa-paw text-main"></i> アカウント削除</h3>
      <div class="d-flex justify-content-end align-items-center gap-2">
        <%= button_to "退会", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn text-white bg-main" %>
        <%= link_to "戻る", :back, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
