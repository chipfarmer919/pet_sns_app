<div class="container mt-4">
  <div class="row">
    <div class="col-3">
      <%= render partial: "sidebar" %>
    </div>
    <div class= "col-9">
      <h3 class="d-flex align-items-center gap-2 fw-bold"><i class="fa fa-paw text-main"></i> 日記</h3>
      <table class="table table-striped mt-4">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>オーナー</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @diaries.each do |diary| %>
            <tr>
              <td><%= diary.title %></td>
              <td><%= diary.user.name %></td>
              <td>
                <a href="<%= user_diary_path(diary.user, diary) %>" class="btn bg-light-cyan text-white">詳細</a>
                <a href="<%= edit_user_diary_path(diary.user, diary) %>" class="btn bg-main text-white ">編集</a>
                <a href="<%= user_diary_path(diary.user, diary) %>" data-confirm="Are you sure?" data-method="delete" class="btn btn-secondary">削除</a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
