<div class="container mt-4">
  <div class="row">
    <div class="col-3">
      <%= render partial: "sidebar" %>
    </div>
    <div class= "col-9">
      <h3 class="d-flex align-items-center gap-2 fw-bold"><i class="fa fa-paw text-main"></i> イベント</h3>
      <table class="table table-striped mt-4">
        <thead>
          <tr>
            <th>イベント名</th>
            <th>主催者</th>
            <th>コミュニティ名</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.title %></td>
              <td><%= event.user.name %></td>
              <td><%= event.community.title %></td>
              <td>
                <a href="<%= community_event_path(event.community, event) %>" class="btn bg-light-cyan text-white">詳細</a>
                <a href="<%= edit_community_event_path(event.community, event) %>" class="btn bg-main text-white ">編集</a>
                <a href="<%= community_event_path(event.community, event) %>" data-confirm="Are you sure?" data-method="delete" class="btn btn-secondary">削除</a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
